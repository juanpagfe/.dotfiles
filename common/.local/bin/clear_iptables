#!/bin/bash

if [[ "$MACHINE" != "Linux" ]]; then
    echo "This program only works in Linux systems"
    exit 1
fi

if [[ $EUID -ne 0 ]]; then
    echo "Error: you must be root"
    exit 1
fi

iptables -P INPUT ACCEPT
iptables -P FORWARD ACCEPT
iptables -P OUTPUT ACCEPT
iptables -t nat -F
iptables -t mangle -F
iptables -F
iptables -X
